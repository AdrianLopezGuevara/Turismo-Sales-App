<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Turismo.MVVM.Views.ExportSales"
             Title="ExportSales">
    <StackLayout Padding="20">
        <Label Text="Select Week Start Date" />
        <DatePicker x:Name="WeekStartDatePicker" Date="{Binding SelectedDate}" />
        <Button Text="Export Sales" Command="{Binding ExportCommand}" />
    </StackLayout>
</ContentPage>